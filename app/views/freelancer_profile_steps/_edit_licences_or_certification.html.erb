<!--Edit License or Certification Modal-->
<div class="modal fade" id="editLicenseCertificationModall-<%= freelancer_certification.id %>" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-md" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close mt-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body pt-0">
        <h3 class="modal-title mb-4" id="modalLabel">Edit Licences or Certification</h3>
        <%= form_for :freelancer_certification, url: wizard_path, method: :put do |f| %>
          <label for="exampleFormControlMultiSelect" class="bp-input-label mt-3">
            Choose a licence or certification to add to your profile
          </label>
          <div id="descriptionCertification" class="collapse multi-collapse <%= freelancer_certification.certification.custom? ? '' : 'show' %>">
            <div class="form-group mb-2">
              <%= f.select :certification_id,
                           options_for_select(@certification, [freelancer_certification.description, freelancer_certification.certification_id]),
                           {}, class: 'form-control selectpicker', 'data-style': "bp-btn-select-border", title: "Select an option..." %>
            </div>
            <a data-toggle="collapse" href=#descriptionCertification" data-target=".multi-collapse" aria-expanded="false" aria-controls="descriptionCertification customDescriptionCertification">
              Create a custom entry
            </a>
          </div>

          <div id="customDescriptionCertification" class="collapse multi-collapse <%= freelancer_certification.certification.custom? ? 'show' : '' %>">
            <div class="form-group mb-2">
              <%= f.text_field :description, class: "form-control", id: "customDescriptionCertificate-#{freelancer_certification.id}", placeholder: "Custom License Entry", value: freelancer_certification.description %>
            </div>
            <a id="editSelectCertification-<%= freelancer_certification.id %>" data-toggle="collapse" href=#descriptionCertification" data-target=".multi-collapse" aria-expanded="false" aria-controls="descriptionCertification customDescriptionCertification">
              Choose from our list
            </a>
          </div>

          <div class="form-group">
            <label for="earnedMonth" class="bp-input-label mt-5">When was this license or certification was earned?</label>
            <div class="row mb-3">
              <div class="col">
                <%= f.select :earned_month,
                             options_for_select(FreelancerCertification::AVAILABLE_MONTHNAMES, freelancer_certification&.earned&.month),
                             {}, class: 'form-control selectpicker',
                             id: 'earnedMonth', required: true, 'data-style': "bp-btn-select-border", title: "Month" %>
              </div>
              <div class="col">
                <%= f.select :earned_year,
                             options_for_select(FreelancerCertification::AVAILABLE_YEARS, freelancer_certification&.earned&.year),
                             {}, class: 'form-control selectpicker',
                             id: 'earnedYear', required: true, 'data-style': "bp-btn-select-border", title: "Year" %>
              </div>
            </div>
            <%= f.hidden_field :id, value: freelancer_certification.id %>
            <div class="modal-footer justify-content-between">
              <button type="button" class="btn btn-link px-0 text-dark" data-dismiss="modal">Cancel</button>
              <div>
                <%= f.submit 'Delete', class: "btn btn-outline-danger mr-2" %>
                <%= f.submit 'Save', class: 'btn btn-primary' %>
              </div>
            </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $('#editSelectCertification-' + <%= freelancer_certification.id %>).on('click', () => {
    $('#customDescriptionCertificate-' + <%= freelancer_certification.id %>).val('');
  })
</script>

