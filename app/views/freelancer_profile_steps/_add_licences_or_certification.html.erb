<!--Add License or Certification Modal-->
<div class="modal fade" id="addLicenseCertificationModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-md" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close mt-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body pt-0">
        <h3 class="modal-title mb-4" id="modalLabel">Add Licences or Certification</h3>
        <%= form_for :freelancer_certification, url: wizard_path, method: :put do |f| %>
          <label for="exampleFormControlMultiSelect" class="bp-input-label mt-3">
            Choose a licence or certification to add to your profile
          </label>
          <%= f.select :certifications,
                       options_for_select(Certification.find_each.map{ |certification| [certification.description, certification.id] if certification.disable == false }),
                       {}, multiple: true, class: 'select2' %>

            <div class="form-group">
              <label for="earnedMonth" class="bp-input-label mt-5">When was this license or certification was earned?</label>
              <div class="row mb-3">
                <div class="col">
                  <%= f.select :earned_month,
                               options_for_select(FreelancerCertification::AVAILABLE_MONTHNAMES),
                               {}, class: 'form-control selectpicker',
                               id: 'earnedMonth', required: true, 'data-style': "bp-btn-select-border", title: "Month" %>
                </div>
                <div class="col">
                  <%= f.select :earned_year,
                               options_for_select(FreelancerCertification::AVAILABLE_YEARS),
                               {}, class: 'form-control selectpicker',
                               id: 'earnedYear', required: true, 'data-style': "bp-btn-select-border", title: "Year" %>
                </div>
              </div>
                <div class="modal-footer justify-content-between">
                  <button type="button" class="btn btn-link px-0 text-dark" data-dismiss="modal">Cancel</button>
                  <%= f.submit 'Save', class: 'btn btn-primary' %>
                </div>
                <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(function() {
    $('.select2').select2({
      allowClear: true,
      placeholder: "Select an option...",
      maximumSelectionLength: 1
    });
  });
</script>
