<div class="modal fade" id="editWorkExperienceModal-<%= freelancer_profile_experience.id %>" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-md" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close mt-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>

      <%= form_for :freelancer_profile_experience, url: wizard_path, method: :put do |f| %>
        <div class="modal-body pt-0">
          <h3 class="modal-title mb-4" id="modalLabel">Edit Experience</h3>

          <div class="container">
            <div class="alert alert-warning d-none" role="alert">
              Ending date cannot occur before the starting date.
            </div>
          </div>

          <div class="form-group">
            <label for="editJobTitleInput" class="bp-input-label">Job Title</label>
            <%= f.text_field :job_title, class: "form-control", id: "editJobTitleInput", placeholder: "Enter your job title", required: true, value: freelancer_profile_experience.job_title  %>
          </div>
          <div class="form-group">
            <label for="editCompanyInput" class="bp-input-label">Company</label>
            <%= f.text_field :company, class: "form-control", id: "editCompanyInput", placeholder: "Enter the company name", required: true, value: freelancer_profile_experience.company  %>
          </div>
          <div class="form-group">
            <label for="editLocationInput" class="bp-input-label">Location</label>
            <%= f.text_field :location, class: "form-control", id: "editLocationInput", placeholder: "e.g. San Francisco, CA", required: true, value: freelancer_profile_experience.location %>
          </div>
          <div class="form-group">
            <label for="editStartMonth" class="bp-input-label">Start Date</label>
            <div class="row mb-3">
              <div class="col">
                <%= f.select :start_month,
                             options_for_select(
                                 select_months_array,
                                 freelancer_profile_experience.start_date.month
                             ),
                             {}, class: 'form-control selectpicker',
                             id: 'startMonth', required: true, 'data-style': "bp-btn-select-border", title: "Month" %>
              </div>
              <div class="col">
                <%= f.select :start_year,
                             options_for_select(FreelancerProfileExperience::AVAILABLE_YEARS, freelancer_profile_experience.start_date.year),
                             {}, class: 'form-control selectpicker',
                             id: 'startYear', required: true, 'data-style': "bp-btn-select-border", title: "Year" %>
              </div>
            </div>
            <div class="custom-control custom-checkbox">
              <%= f.check_box :current_job, class: "custom-control-input #{freelancer_profile_experience.current_job ? 'collapsed' : ''}", id: "editCurrentJob-#{freelancer_profile_experience.id}", type: "button", 'data-toggle': "collapse", 'data-target': "#editEndDateToggle-#{freelancer_profile_experience.id}", 'aria-expanded': "false", 'aria-controls': "editEndDateToggle-#{freelancer_profile_experience.id}", checked: "#{freelancer_profile_experience.current_job ? 'checked' : 'false'}" %>
              <label class="custom-control-label" for="editCurrentJob-<%= freelancer_profile_experience.id %>">Current Job</label>
            </div>
          </div>
          <div class="form-group collapse <%= freelancer_profile_experience.current_job ? '' : 'show' %>" id="editEndDateToggle-<%= freelancer_profile_experience.id %>">
            <label for="endMonth" class="bp-input-label">End Date</label>
            <div class="row">
              <div class="col">
                <%= f.select :end_month,
                             options_for_select(
                                 select_months_array,
                                 freelancer_profile_experience.end_date&.month
                             ),
                             {}, class: 'form-control selectpicker',
                             id: 'endMonth', 'data-style': "bp-btn-select-border", title: "Month" %>
              </div>
              <div class="col">
                <%= f.select :end_year,
                             options_for_select(FreelancerProfileExperience::AVAILABLE_YEARS, freelancer_profile_experience.end_date&.year),
                             {}, class: 'form-control selectpicker',
                             id: 'endYear', 'data-style': "bp-btn-select-border", title: "Year" %>
              </div>
            </div>
          </div>
          <div class="form-group mb-0">
            <label for="editJobDescriptionTextarea" class="bp-input-label">Description</label>
            <%= f.text_area :description, class: "form-control", id: "editJobDescriptionTextarea", placeholder: "Enter your job description", rows: 3, required: true, value: freelancer_profile_experience.description %>
          </div>
          <%= f.hidden_field :id, value: freelancer_profile_experience.id %>
        </div>
        <div class="modal-footer justify-content-between">
          <button type="button" class="btn btn-link px-0 text-dark" data-dismiss="modal">Cancel</button>
          <div>
            <%= f.submit 'Delete', class: "btn btn-outline-danger mr-2" %>
            <%= f.submit 'Save', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render partial: 'freelancer_profile_steps/date_validation' %>
