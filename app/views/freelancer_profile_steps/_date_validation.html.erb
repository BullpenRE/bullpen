<script>
    $('.btn-primary').on('click', (e) => {
        if (!$('#currentJob').prop('checked')) {
            if ($('#endYear').val() < $('#startYear').val()) {
                show_alert('You entered a starting data later than the ending date');
                e.preventDefault();
                e.stopPropagation();
            } else if ($('#endYear').val() == $('#startYear').val()) {
                if($('#endMonth').val() < $('#startMonth').val()) {
                    show_alert('You entered a starting data later than the ending date');
                    e.preventDefault();
                    e.stopPropagation();
                }
            }
        }
    });

    const show_alert = (message) => {
        $('.alert').removeClass('d-none').addClass('d-block').append(message);
        setTimeout(() => {
            $('.alert').removeClass('d-block').addClass('d-none').text('');
        }, 3000);
    }
</script>