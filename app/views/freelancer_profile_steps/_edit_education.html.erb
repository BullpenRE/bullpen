<!--Edit Education Modal-->
<div class="modal fade" id="editEducationModal-<%= freelancer_profile_education.id %>" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-md" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close mt-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <%= form_for :freelancer_profile_education, url: wizard_path, method: :put do |f| %>
        <div class="modal-body pt-0">
          <h3 class="modal-title mb-4" id="modalLabel">Edit Education</h3>
          <div class="form-group">
            <label for="editInstitutionInput" class="bp-input-label">Institution</label>
            <%= f.text_field :institution, class: "form-control", id: "editInstitutionInput", placeholder: "Enter the school you attended", value: freelancer_profile_education.institution %>
          </div>
          <div class="form-group">
            <label for="editDegreeSelect" class="bp-input-label">Degree</label>
            <%= f.select :degree,
                         options_for_select(FreelancerProfileEducation.degrees.keys, freelancer_profile_education.degree),
                         {}, class: 'form-control selectpicker',
                         id: 'editDegreeSelect', 'data-style': "bp-btn-select-border",
                         title: "Please make a selection" %>
            <script>
              $('#editDegreeSelect').selectpicker('val', 'Masters');
            </script>
          </div>
          <div class="form-group">
            <label for="editCourseInput" class="bp-input-label">Course of Study</label>
            <%= f.text_field :course_of_study, class: "form-control", id: "editCourseInput", placeholder: "Enter your degree program", value: freelancer_profile_education.course_of_study %>
          </div>
          <div class="form-group">
            <label for="editGraduationYear" class="bp-input-label">Graduation Year</label>
            <div class="row mb-2 collapse show" id="editGraduationDateToggle">
              <div class="col">
                <%= f.select :graduation_year,
                             options_for_select(FreelancerProfileEducation::AVAILABLE_YEARS, freelancer_profile_education.graduation_year),
                             {}, class: 'form-control selectpicker',
                             id: 'editGraduationYear', 'data-style': "bp-btn-select-border", title: "Year" %>
              <script>
                $('#editGraduationYear').selectpicker('val', '2019');
              </script>
              </div>
              <div class="col"></div>
            </div>
            <div class="custom-control custom-checkbox">
              <%= f.check_box :currently_studying, class: "custom-control-input", id: "editCurrentlyStudying", type: "button", 'data-toggle': "collapse", 'data-target': "#editGraduationDateToggle", 'aria-expanded': "false", 'aria-controls': "editGraduationDateToggle" %>
              <label class="custom-control-label" for="editCurrentlyStudying">Currently Studying</label>
            </div>
          </div>
          <div class="form-group mb-0">
            <label for="editEducationDescriptionTextarea" class="bp-input-label">Description (optional)</label>
            <%= f.text_area :description, class: "form-control", id: "editEducationDescriptionTextarea", placeholder: "Enter a brief description", rows: 3, value: freelancer_profile_education.description %>
          </div>
          <%= f.hidden_field :id, value: freelancer_profile_education.id %>
        </div>
        <div class="modal-footer justify-content-between">
          <button type="button" class="btn btn-link px-0 text-dark" data-dismiss="modal">Cancel</button>
          <div>
            <button type="button" class="btn btn-outline-danger mr-2">Delete</button>
            <%= f.submit 'Save', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
