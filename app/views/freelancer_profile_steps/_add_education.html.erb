<!--Add Education Modal-->
<div class="modal fade" id="addEducationModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-md cy-education" role="document">
    <div class="modal-content cy-education">
      <div class="modal-header cy-education">
        <button type="button" class="cy-close mt-2 cy-education" data-dismiss="modal" aria-label="Close">
          <span class="cy-education cy-close" aria-hidden="true">Ã—</span>
        </button>
      </div>
      <%= form_for :freelancer_profile_education, html: {class: 'cy-education'}, url: wizard_path, method: :put do |f| %>
        <div class="modal-body pt-0">
          <h3 class="modal-title mb-4" id="modalLabel">Add Education</h3>
          <div class="form-group cy-institution">
            <label for="institutionInput" class="bp-input-label cy-institution">Institution</label>
            <%= f.text_field :institution, class: "form-control", id: "institutionInput", placeholder: "Enter the school you attended" %>
          </div>
          <div class="form-group cy-degree">
            <label for="degreeSelect" class="bp-input-label cy-degree">Degree</label>
            <%= f.select :degree,
                         options_for_select(FreelancerProfileEducation.degrees.keys),
                         {}, class: 'form-control selectpicker',
                         id: 'degreeSelect', required: true, 'data-style': "bp-btn-select-border",
                         title: "Please make a selection" %>
          </div>
          <div class="form-group cy-course-of-study">
            <label for="courseInput" class="bp-input-label cy-course-of-study">Course of Study</label>
            <%= f.text_field :course_of_study, class: "form-control", id: "courseInput", placeholder: "Enter your degree program" %>
          </div>
          <div class="form-group graduation-year">
            <label for="graduationYear" class="bp-input-label graduation-year">Graduation Year</label>
            <div class="row mb-2 collapse show" id="graduationDateToggle">
              <div class="col">
                <%= f.select :graduation_year,
                             options_for_select(FreelancerProfileEducation::AVAILABLE_YEARS),
                             {}, class: 'form-control selectpicker',
                             id: 'graduationYear', 'data-style': "bp-btn-select-border", title: "Year" %>
            </div>
            <div class="col"></div>
          </div>
          <div class="custom-control custom-checkbox current-studying">
            <%= f.check_box :currently_studying, class: "custom-control-input", id: "currentlyStudying", type: "button", 'data-toggle': "collapse", 'data-target': "#graduationDateToggle", 'aria-expanded': "false", 'aria-controls': "graduationDateToggle" %>
            <label class="custom-control-label current-studying" for="currentlyStudying">Currently Studying</label>
          </div>
        </div>
        <div class="form-group mb-0 education-description">
          <label for="educationDescriptionTextarea" class="bp-input-label education-description">Description (optional)</label>
          <%= f.text_area :description, class: "form-control", id: "educationDescriptionTextarea", placeholder: "Enter a brief description", rows: 3 %>
        </div>
      </div>
        <div class="modal-footer justify-content-between education">
          <button type="button" class="btn btn-link px-0 text-dark cancel education" data-dismiss="modal">Cancel</button>
          <%= f.submit 'Save', class: 'btn btn-primary save-education' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
