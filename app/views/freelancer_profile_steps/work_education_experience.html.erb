<%= render 'nav_bar' %>
<!--Progress Meter, Step 4-->
<div class="container mb-4">
  <div class="progress bg-white shadow-sm mx-auto" style="max-width: 700px;">
    <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <div class="text-secondary font-weight-bold my-1 text-center">Step 4 of 4</div>
</div>

<!--Content Card, Step 4-->
<div class="container">
  <div class="bp-card mb-5 mx-auto" style="max-width: 700px;">
    <div class="text-center">
      <h2>Work experience and education</h2>
      <p class="mb-4">Tell us about your work experience and educational background.</p>
    </div>
    <div class="mb-4">
      <div class="bp-input-label">
        Work Experience
      </div>
      <div class="d-flex align-items-center justify-content-between mb-3">
        <div class="w-100">
          <div class="row">
            <div class="col mb-1 text">Market Analyst</div>
          </div>
          <div class="row bp-text-sm">
            <div class="col-md">Bullpen, San Francisco, CA</div>
            <div class="col-md">July 2019-Present</div>
          </div>
        </div>
        <button class="btn btn-link" type="button" data-toggle="modal" data-target="#editWorkExperienceModal"><i class="fas fa-pencil-alt" style="font-size: 24px"></i></button>
      </div>
      <button class="btn btn-outline-primary" data-toggle="modal" data-target="#addWorkExperienceModal"><i class="fas fa-plus mr-2"></i>Add Experience</button>
    </div>
    <div class="mb-5">
      <div class="bp-input-label">
        Education
      </div>
      <div class="d-flex align-items-center justify-content-between mb-3">
        <div class="w-100">
          <div class="row">
            <div class="col mb-1 text">Academy of Art University</div>
          </div>
          <div class="row bp-text-sm">
            <div class="col-md">Masters, Web Design & New Media</div>
            <div class="col-md">2019</div>
          </div>
        </div>
        <button class="btn btn-link" type="button" data-toggle="modal" data-target="#editEducationModal"><i class="fas fa-pencil-alt" style="font-size: 24px"></i></button>
      </div>
      <button class="btn btn-outline-primary" data-toggle="modal" data-target="#addEducationModal"><i class="fas fa-plus mr-2"></i>Add Education</button>
    </div>
    <div class="d-flex justify-content-between">
      <%= link_to 'Back', previous_wizard_path, class: "btn btn-link px-0" %>
      <button type="button" class="btn btn-primary">Next</button>
    </div>
  </div>
</div>
<%= render 'work_experience' %>
