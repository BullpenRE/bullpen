<%- if controller_name != 'sessions' %>
  <div class="text-center text-muted text-grey-dark">
    <h5>Remember your password? <%= link_to "Login", new_session_path(resource_name) %></h5><br />
    For help contact us at <%= mail_to('support@bullpenre.com') %><br />
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations'  && controller_name != 'passwords' %>
  <div class="text-center text-muted text-grey-dark">
    Need an account? <%= link_to "Sign up", join_path %><br /><br />
    For help contact us at <%= mail_to('support@bullpenre.com') %><br />
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>
