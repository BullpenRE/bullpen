<br>
<%= render partial: 'email/content_block', locals: { content: "Hello #{@email}!" } %>
<% if @resource.try(:unconfirmed_email?) %>
  <%= render partial: 'email/content_block', locals: { content: "We're contacting you to notify you that your email is being changed to #{@resource.unconfirmed_email}." } %>
<% else %>
  <%= render partial: 'email/content_block', locals: { content: "We're contacting you to notify you that your email has been changed to #{@resource.email}." } %>
<% end %>
