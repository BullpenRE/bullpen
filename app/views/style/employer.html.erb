
<!--Use this as the header for all steps-->
<div class="mx-auto my-4 text-center">
    <%= image_pack_tag('bullpen-email-logo.png', width: 130, height: 40) %>
</div>

<!--Progress Meter, Step 1-->
<div class="container mb-4">
    <div class="progress bg-white shadow-sm mx-auto" style="max-width: 500px;">
        <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="text-secondary font-weight-bold my-1 text-center">Step 1 of 5</div>
</div>

<!--Content Card, Step 1-->
<div class="container">
    <div class="bp-card mb-5 mx-auto" style="max-width: 500px;">
        <div class="mb-4">
            <h2>Tell us about your company.</h2>
        </div>
        <div class="form-group mb-4">
            <label for="companyNameInput" class="bp-input-label">Company Name</label>
            <input type="text" class="form-control" id="companyNameInput" placeholder="Enter your company name">
        </div>
        <div class="form-group mb-4">
            <label for="companyWebsiteInput" class="bp-input-label">Website</label>
            <input type="text" class="form-control" id="companyWebsiteInput" placeholder="Enter your company web site">
        </div>
        <div class="form-group mb-5">
            <label for="companyRoleInput" class="bp-input-label">What is your role?</label>
            <input type="text" class="form-control" id="companyRoleInput" placeholder="Enter your role">
        </div>
        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-link px-0 invisible">Back</button>
            <button type="button" class="btn btn-primary">Next</button>
        </div>
    </div>
</div>

<!--Progress Meter, Step 2-->
<div class="container mb-4">
    <div class="progress bg-white shadow-sm mx-auto" style="max-width: 500px;">
        <div class="progress-bar" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="text-secondary font-weight-bold my-1 text-center">Step 2 of 5</div>
</div>

<!--Content Card, Step 2-->
<div class="container">
    <div class="bp-card mb-5 mx-auto" style="max-width: 500px;">
        <div class="mb-4">
            <h2>How many people work at your company?</h2>
        </div>
        <div class="custom-control custom-radio mb-3">
            <input type="radio" id="employeeCount1" name="employeeCountRadio" class="custom-control-input">
            <label class="custom-control-label" for="employeeCount1">1-10</label>
        </div>
        <div class="custom-control custom-radio mb-3">
            <input type="radio" id="employeeCount2" name="employeeCountRadio" class="custom-control-input">
            <label class="custom-control-label" for="employeeCount2">11-50</label>
        </div>
        <div class="custom-control custom-radio mb-3">
            <input type="radio" id="employeeCount3" name="employeeCountRadio" class="custom-control-input">
            <label class="custom-control-label" for="employeeCount3">51-100</label>
        </div>
        <div class="custom-control custom-radio mb-5">
            <input type="radio" id="employeeCount4" name="employeeCountRadio" class="custom-control-input">
            <label class="custom-control-label" for="employeeCount4">100+</label>
        </div>
        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-link px-0">Back</button>
            <button type="button" class="btn btn-primary">Next</button>
        </div>
    </div>
</div>

<!--Progress Meter, Step 3-->
<div class="container mb-4">
    <div class="progress bg-white shadow-sm mx-auto" style="max-width: 500px;">
        <div class="progress-bar" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="text-secondary font-weight-bold my-1 text-center">Step 3 of 5</div>
</div>

<!--Content Card, Step 3-->
<div class="container">
    <div class="bp-card mb-5 mx-auto" style="max-width: 500px;">
        <div class="mb-4">
            <h2>What type of work do you do most?</h2>
        </div>
        <div class="custom-control custom-radio mb-3">
            <input type="radio" id="workType1" name="workTypeRadio" class="custom-control-input">
            <label class="custom-control-label" for="workType1">Brokerage</label>
        </div>
        <div class="custom-control custom-radio mb-3">
            <input type="radio" id="workType2" name="workTypeRadio" class="custom-control-input">
