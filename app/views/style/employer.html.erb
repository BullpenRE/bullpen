            <input type="radio" id="workType3" name="workTypeRadio" class="custom-control-input">
            <label class="custom-control-label" for="workType3">Corporate</label>
        </div>
        <div class="custom-control custom-radio mb-3">
            <input type="radio" id="workType4" name="workTypeRadio" class="custom-control-input">
            <label class="custom-control-label" for="workType4">Development</label>
        </div>
        <div class="custom-control custom-radio mb-3">
            <input type="radio" id="workType5" name="workTypeRadio" class="custom-control-input">
            <label class="custom-control-label" for="workType5">Private Equity</label>
