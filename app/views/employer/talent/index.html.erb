<!--Talent card-->
<div class="container mb-3">

  <div class="container">
    <div class="row justify-content-between">
        <h1>Talent</h1>
        <a  href="#">Show Filters</a>
    </div>
  </div>

  <% @freelancer_profiles.each do |freelancer_profile| %>
  <div class="bp-card mb-3">
    <div>
      <div class="d-flex flex-column flex-lg-row">

        <div class="mr-3">
          <% if freelancer_profile.avatar.attached? %>
            <div class="text-light mb-3 avatar-image" style="line-height: 0;">
              <%= image_tag freelancer_profile.avatar, class: 'rounded-circle', width: '115px', height: '115px' %>
            </div>
          <% else %>
            <div class="text-light mb-3 avatar-image" style="font-size: 113px; line-height: 0;"><i class="fas fa-user-circle"></i></div>
          <% end %>
        </div>

        <div class="bp-text-sm">
          <h4><%= freelancer_profile.first_name %> <%=  freelancer_profile.last_name %></h4>
          <div class="mb-2 text-wrap text-break">
            <%= freelancer_profile.professional_title %><br>
            <%= freelancer_profile.location %>
          </div>
          <div class="text-wrap text-break mb-2"><%= freelancer_profile.professional_summary %></div>
          <div class="text-secondary font-weight-bold mb-2">$120 per hour</div>
          <div>
            <%  freelancer_profile.sectors.order(description: :asc)&.each do |sector| %>
              <span class="badge badge-secondary mb-1"><%= sector.description %></span>
            <% end %>
          </div>
        </div>

        <div class="ml-auto p-1">
          <button class="btn btn-primary">Request Interview</button>
          <button class="btn btn-outline-primary">Show Profile</button>
        </div>

      </div>
    </div>
  </div>
  <% end %>

</div>