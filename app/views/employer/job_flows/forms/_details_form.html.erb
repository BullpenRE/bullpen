<%= form_for :job, url: wizard_path, method: :put, remote: true do |f| %>
  <%= f.hidden_field :job_id, value: @job.id %>
  <%= f.hidden_field 'step', value: 'post_job_step_4' %>
  <div class="row">
    <div class="col-xs-12 col-lg-4 pr-lg-1 mb-3">
      <h5>Contract Type <i class="far fa-question-circle text-primary fa-lg"></i></h5>
      <%= f.select :contract_type,
                       options_for_select(
                         Job::CONTRACT_TYPE_DESCRIPTIONS, job.contract_type),
                       {}, class: 'form-control', required: true, style: "width: 100%" %>
    </div>
    <div class="col-xs-12 col-lg-8 pl-lg-1 mb-3">
      <label class="h5 rangePay"></label>
      <div class="d-flex flex-column flex-lg-row w-100">
        <%= f.text_field :pay_range_low, class: "form-control mb-2 mr-lg-2", placeholder: "$ Low", required: true %>
        <div class="w-100">
          <%= f.text_field :pay_range_high, class: "form-control", placeholder: "$ High" %>
          <span class="error_message text-danger"></span>
        </div>
      </div>
    </div>
  </div>
  
  <div class="form-group mb-3">
    <label for="jobDetailsTextarea" class="h5">Describe responsibilities, provided resources, or any other requirements. <span class="text-dark font-weight-normal">(Optional)</span></label>
    <%= f.rich_text_area :relevant_details, class: "form-control", id: "jobDetailsTextarea", placeholder: "Enter any relevant job details", rows: "8", maxlength: "5000" %>
  </div>
  <div class="d-flex pt-3 justify-content-between">
    <%= link_to employer_job_flows_path(id: :post_job_step_3, job_id: @job.id), class: "btn btn-outline-primary", remote: true do %>
      <i class="fas fa-chevron-left mr-2"></i>Back
    <% end %>
    <%= button_tag type: 'submit', class: "btn btn-primary" do %>
      Next<i class="fas fa-chevron-right ml-2"></i>
    <% end %>
  </div>
<% end %>
<script>
  change_contract_type();

  $('#job_contract_type').change(() => {
    change_contract_type();
  });

  function change_contract_type() {
    const required_experience = '<%= @job.required_experience %>'
    const recommendation = retainer_fee_recommendations(required_experience)[$("#job_contract_type").val()];
    const hourly_recommendation = retainer_fee_recommendations(required_experience)['hourly'];

    if ($("#job_contract_type").val() == 'hourly' || !$("#job_contract_type").val()){
      $('#job_pay_range_high').removeClass('d-none');
      $('#job_pay_range_low').attr("placeholder", "$ Low");
      $('.rangePay').html('Hourly Pay Range <span class="font-weight-normal text-dark">(' + hourly_recommendation + ' recommended)</span>')
    } else {
      $('#job_pay_range_high').addClass('d-none');
      $('#job_pay_range_low').attr("placeholder", "$ Monthly amount");
      if(recommendation) {
        $('.rangePay').html('Monthly Retainer Fee <span class="font-weight-normal text-dark">(' + recommendation + ' recommended)</span>');
      }
    }
  };

  function retainer_fee_recommendations(required_experience) {
    if (required_experience == 'senior') {
      return { 'hourly': '$115 - $185', 'monthly_retainer_20': '$2,300 - $3,700', 'monthly_retainer_40': '$4,140 - $6,660', 'monthly_retainer_80': '$7,360 - $11,840' }
    } else if (required_experience == 'intermediate'){
      return { 'hourly': '$75 - $125', 'monthly_retainer_20': '$1,500 - $2,500', 'monthly_retainer_40': '$2,700 - $4,500', 'monthly_retainer_80': '$4,800 - $8,000' }
    } else {
      return { 'hourly': '$40 - $85', 'monthly_retainer_20': '$800 - $1,700', 'monthly_retainer_40': '$1,440 - $3,060', 'monthly_retainer_80': '$2,560 - $5,440' }
    }
  };

  $('.btn-primary').on('click', (e) => {
    const job_pay_range_low = $('#job_pay_range_low').val().replace(/\$|a..zA..Z|,/g, '');
    const job_pay_range_high = $('#job_pay_range_high').val().replace(/\$|a..zA..Z|,/g, '');
    if ($("#job_contract_type").val() == 'hourly' && job_pay_range_high && (parseInt(job_pay_range_high, 10) < parseInt(job_pay_range_low, 10))) {
      $('.error_message').text('Enter $' + $('#job_pay_range_low').val()+ ' or more');
      $('#job_pay_range_high').addClass('error');
      e.preventDefault();
      e.stopPropagation();
    }
  });

  document.addEventListener("trix-file-accept", event => {
    event.preventDefault();
  });
</script>