<!--Modal, Step 1-->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#postJobStep1">Step 1</button>
<div class="modal fade" id="postJobStep1" tabindex="-1" role="dialog" aria-labelledby="modelLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="postJobStep1Label">Post a Job</h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <form class="needs-validation" novalidate>
        <div class="modal-body pt-0">
          <!--Progress bar-->
          <div class="mb-4">
            <div class="progress mb-1">
              <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="text-center d-none d-lg-flex">
              <div class="col text-secondary font-weight-bold">Summary</div>
              <div class="col text-muted">Job Type</div>
              <div class="col text-muted">Qualifications</div>
              <div class="col text-muted">Details</div>
              <div class="col text-muted">Questions</div>
            </div>
            <div class="d-flex justify-content-between d-lg-none">
              <div class="text-secondary font-weight-bold">Summary</div>
              <div class="text-secondary">1 of 5</div>
            </div>
          </div>
          <!--Form-->
          <div class="form-group">
            <div class="d-flex justify-content-between">
              <label for="jobTitle" class="h5">Job Title</label>
            </div>
            <input type="text" class="form-control" id="jobTitle" placeholder="Enter the job title" maxlength="50">
          </div>
          <div class="form-group">
            <label for="jobShortDescription" class="h5">Textarea</label>
            <textarea class="form-control" id="jobShortDescription" rows="3" placeholder="Enter a short, compelling description of this job" maxlength="250" required></textarea>
            <div class="bp-text-sm mt-1">Job seekers will see this summary on the search page.</div>
          </div>
          <div class="form-group mb-1">
            <label for="sectorMultiselect" class="h5">What sectors are relevant to this job?</label>
            <select class="select2" multiple="multiple" id="sectorMultiselect" style="width: 100%">
            </select>
          </div>
        </div>
        <div class="modal-footer justify-content-between">
          <button type="button" class="btn btn-outline-primary invisible"><i class="fas fa-chevron-left mr-2"></i>Back</button>
          <button type="submit" class="btn btn-primary">Next<i class="fas fa-chevron-right ml-2"></i></button>
        </div>
      </form>
    </div>
  </div>
</div>