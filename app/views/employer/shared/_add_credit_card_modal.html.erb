<style>
  .stripe-form-container label {
    font-family: 'Ubuntu', sans-serif;
    color: #005495;
  }

  .StripeElement {
    height: 48px !important;
    padding: 14px 12px !important;
    border: 1px solid #24A878 !important;
    box-shadow: 0 1px 3px 0 transparent !important;
    -webkit-transition: box-shadow 150ms ease;
    transition: box-shadow 150ms ease;
  }

  .StripeElement--focus {
    box-shadow: 1px 1px 1px 1px #24A878 !important;
  }

  .StripeElement--invalid {
    border-color: #fa755a;
  }

  .StripeElement--webkit-autofill {
    background-color: #fefde5 !important;
  }

  .stripe-form-container input[type='submit'] {
    color: #24A878;
    font-weight: 400;
    background-color: white;
    font-size: 1rem;
    line-height: 1.5;
    border: 1px solid #24A878;
    border-radius: 0.1875rem;
    padding: 0.375rem 0.75rem;
    margin-top: 1rem;
  }

  .stripe-form-container input[type='submit']:hover {
    color: #fff;
    background-color: #24A878;
    border-color: #24A878;
  }
</style>

<div class="modal" id="addCreditCardModal" tabindex="-1" role="dialog" aria-labelledby="modelLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header pl-2">
        <h1 class="modal-title pl-2">
          Credit Card
        </h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>

      <div class="modal-body">
        <div class="stripe-form-container">
          <%= stripe_elements_tag submit_path: employer_create_card_path %>
        </div>
      </div>
    </div>
  </div>
</div>