<div class="modal" id="showOfferDetails<%= contract.id %>" tabindex="-1" role="dialog" aria-labelledby="modelLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <!--  Header with '×'-->
      <div class="modal-header">
        <h1 class="modal-title" id="showOfferDetailsLabel">Offer Details <i class="far fa-question-circle text-primary"></i> </h1>
        <button type="button" class="close close-job" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <!--Offer Details Card-->
      <div class="modal-body py-0 mb-3">
        <div class="row mb-4">
          <div class="col-sm-6">
            <h5 class="mt-1">From</h5>
            <%= contract.employer_profile.full_name %>, <%= contract.employer_profile.company_name %>
          </div>
          <div class="col-sm-6">
            <h5 class="mt-1">To</h5>
            <%= contract.freelancer_profile.full_name %>
          </div>
        </div>
        <label class="text-secondary font-weight-bold">Job Title</label>
        <p><%= contract.title %></p>
        <label class="text-secondary font-weight-bold mt-2">Job Description</label>
        <%= contract.job_description.body.to_s %>
        <label class="text-secondary font-weight-bold">Offered Rate</label>
        <% if contract.contract_type == 'hourly' %>
          <div><%= "$#{contract.pay_rate.to_s(:delimited)} per hour" %></div>
        <% else %>
          <div><%= "$#{contract.pay_rate.to_s(:delimited)} monthly retainer fee for up to #{contract.contract_type.split('_').last} hours" %></div>
          <%= "$#{contract.pay_rate/contract.contract_type.split('_').last.to_i} per hour for additional hours" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
