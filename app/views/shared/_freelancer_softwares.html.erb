<div class="mt-3">
  <h5>Software Licenses</h5>
  <div class="d-flex flex-row flex-inline">
    <div class="d-flex-col">
      <%= freelancer_profile.softwares.pluck(:description).join(', ') %>
    </div>
    <% if editable %>
        <div class="d-flex-col ml-auto">
          <button class="btn link-btn shadow-none p-0 align-self-start ml-auto" type="button"  data-toggle="modal" data-target="#editSoftwareModal"><i class="fas fa-edit text-primary"></i></button>
        </div>
        <%= render 'freelancer/shared/edit_freelancer_softwares',
                   freelancer_softwares: freelancer_profile.softwares,
                   freelancer_profile: freelancer_profile %>
    <% end %>
  </div>
</div>