<div class="form-group mt-3">
  <h5>Cover Letter</h5>
  <%= job_application.cover_letter %>
</div>
<% if job_application.work_samples.attached? %>
  <h5>Work Samples</h5>
  <% job_application.work_samples.each do |work_sample| %>
    <div class="text-primary mb-2 font-weight-bold">
      <i class="fas fa-download"></i>
      <%= link_to work_sample.filename, rails_blob_path(work_sample, disposition: :attachment) %>
    </div>
  <% end %>
<% end %>
<hr>
<% if job_application.available_during_work_hours.present? %>
  <i class="far fa-clock text-secondary fa-fw fa-lg"></i> <label class="h5 mb-0">Daytime availability <span class="text-dark font-weight-normal">(9AM-5PM <%= job_application.job.time_zone %>)</span></label>
<% end %>
<% if job_application.job_application_questions.any? %>
  <% job_application.job_application_questions.each do |job_application_question| %>
    <div class="text-dark mt-3 mb-1 font-weight-bold"><%= job_application_question.job_question.description %></div>
    <div class="text-dark font-weight-normal"><%= job_application_question.answer %></div>
  <% end %>
<% end %>