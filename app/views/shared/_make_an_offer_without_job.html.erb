<div class="modal" id="makeAnOfferWithoutJob<%= freelancer_profile.id %>" tabindex="-1" role="dialog" aria-labelledby="modelLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <!--  Header with '×'-->
      <div class="modal-header">
        <h1 class="modal-title" id="showSendMessageLabel">Make an Offer <i class="far fa-question-circle text-primary"></i> </h1>
        <button type="button" class="close close-job" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <!--Make an Offer Card-->
      <div class="modal-body py-0">
        <div class="row mb-3">
          <div class="col-sm-6">
            <h5 class="mt-1">From</h5>
            <%= current_user.employer_profile.full_name %>, <%= current_user.employer_profile.company_name %>
          </div>
          <div class="col-sm-6">
            <h5 class="mt-1">To</h5>
            <%= freelancer_profile.full_name  %>
          </div>
        </div>
        <%= form_for :make_an_offer, url:  employer_make_an_offer_without_job_path do |f| %>
          <%= f.hidden_field :freelancer_profile_id, value: freelancer_profile.id %>
          <div class="form-group">
            <label for="JobTitleInput" class="h5">Job Post <a class="text-dark font-weight-light">(Optional)</a></label>
              <%= f.select :job_id,
                           options_for_select(current_user.posted_jobs.pluck(:title,:id)),
                           {}, class: "form-control contract_type#{freelancer_profile&.id}", required: true, style: "width: 100%" %>
            <label for="JobTitleInput" class="h5 mt-3">Job Title</label>
            <div class="w-100">
              <%= f.text_field :title, class: "form-control mb-3", id: "JobTitleInput", placeholder: "Enter the job title" %>
            </div>
            <label for="JobDescriptionInput" class="h5">Job Description</label>
            <div class="w-100">
              <%= f.rich_text_area :job_description, class: "form-control mb-3", id: "JobDescriptionInput", placeholder: "Enter Job Description" %>
            </div>
              <div class="row mb-3">
                <div class="col-sm-4">
                  <label class="h5 mt-1">Fee Structure</label>
                  <%= f.select :contract_type,
                               options_for_select(Job::CONTRACT_TYPE_DESCRIPTIONS),
                               {}, class: "form-control contract_type#{freelancer_profile&.id}", required: true, style: "width: 100%" %>
                </div>
                <div class="col-sm-4">
                  <label class="h5 mt-1 contract_rate<%= freelancer_profile&.id %>"> Hourly Rate </label>
                  <%= f.text_field :pay_rate, class: "form-control pay_rate#{freelancer_profile&.id}", required: true %>
                </div>
                <div class="col-sm-4"></div>
              </div>
            <%# if job.present? %>
<!--              <p class="mb-4 mt-0">Your payment method will be charged weekly based on the number of hours worked.</p>-->
<!--              <h5 >Payment Method</h5>-->
<!--              <div class="mb-4">-->
<!--                <button class="btn btn-primary" type="button">Add a Credit Card</button>-->
<!--              </div>-->
<!--              <div class="form-check custom-checkbox mt-1">-->
                <%#= f.check_box :state, class: "custom-control-input", id: "stateClosed#{job.id}" %>
<!--                <label class="custom-control-label text-secondary font-weight-bold mb-4" for="stateClosed<%#= job.id %>">Close the job post (pending applicants will be notified)</label>-->
<!--              </div>-->
<!--              <div class="text-muted">-->
<!--                By sending this offer, you agree to-->
<!--                <a href="https://bullpenre.com/terms-of-service">-->
<!--                  Bullpen's Terms of Service,-->
<!--                </a>-->
<!--                <a href="https://bullpenre.com/privacy-policy">-->
<!--                  Privacy Agreement,-->
<!--                </a> and <a href="https://stripe.com/connect-account/legal">Stripe's Connected Accounts Authorization</a>-->
<!--              </div>-->
            <%# end %>
            <div class="d-flex justify-content-end">
              <%= f.submit 'Send Offer', class: 'btn btn-primary mt-3 send-invitation' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("trix-file-accept", event => {
     event.preventDefault();
  });

  $('.contract_type<%= freelancer_profile&.id %>').change(() => {
    if ($('.contract_type<%= freelancer_profile&.id %>').val() == 'hourly' || !$('.contract_type<%= freelancer_profile&.id %>').val()) {
      $('.contract_rate<%= freelancer_profile&.id %>').text('Hourly Rate');
    } else {
      $('.contract_rate<%= freelancer_profile&.id %>').text('Monthly Rate');
    }
  });
</script>
<style>
  #JobDescriptionInput {
    min-height: 8rem;
    height: auto;
  }
</style>