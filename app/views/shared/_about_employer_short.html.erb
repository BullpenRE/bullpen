<div class="d-flex flex-sm-row flex-column mb-3 align-items-center">
  <% if employer_profile.avatar.attached? %>
    <div class="text-light mr-2 avatar-image text-center" style="line-height: 0; margin-bottom: 20px;">
      <%= image_tag employer_profile.avatar, class: 'rounded-circle', width: '80px', height: '80px' %>
    </div>
  <% else %>
    <div class="text-light mr-3 avatar-image" style="font-size: 80px; line-height: 0;"><i class="fas fa-user-circle"></i></div>
  <% end %>
  <div class="pr-0">
    <div class="d-flex flex-row flex-inline">
      <div class="d-flex-col">
        <h2><%= employer_profile.full_name %></h2>
      </div>
    </div>
    <div class="bp-text-sm mb-3 text-wrap text-break">
      <%= employer_profile.company_name %><br>
      <%= employer_profile.user.location %>
    </div>
  </div>
</div>
