<% if freelancer_profile.real_estate_skills.any? %>
    <%= render 'shared/freelancer_real_estate_skills',
               freelancer_profile: freelancer_profile,
               editable: freelancer_profile.editable?(current_user) %>
<% end %>

<% if freelancer_profile.softwares.any? %>
    <%= render 'shared/freelancer_softwares',
               freelancer_profile: freelancer_profile,
               editable: freelancer_profile.editable?(current_user) %>
<% else %>
  <div class="mt-3">
    <%= render 'shared/edit_freelancer_softwares', freelancer_profile: freelancer_profile %>
    <button class="btn btn-outline-primary" type="button" data-toggle="modal" data-target="#editSoftwareModal">
      Add Software Licences
    </button>
  </div>
<% end %>

<% if freelancer_profile.freelancer_profile_experiences.any? %>
    <%= render 'shared/freelancer_profile_experiences',
               freelancer_profile: freelancer_profile,
               editable: freelancer_profile.editable?(current_user) %>
<% end %>

<% if freelancer_profile.freelancer_profile_educations.any? || freelancer_profile.freelancer_certifications.any? %>
  <hr>
<% end %>

<div class="mt-3">
  <% if @freelancer_profile.freelancer_profile_educations.any? %>
    <h4>Education</h4>
    <% @freelancer_profile.freelancer_profile_educations.order(currently_studying: :desc, graduation_year: :desc).each do |education| %>
      <div class="d-flex">
        <div class="mb-2 mr-2 text-wrap text-break"><b><%= education.institution %></b><br><%= education.degree %> <%= education.course_of_study %></div>
        <div class="ml-auto mr-1"><i><%= education.currently_studying ? 'Present' : education.graduation_year %></i></div>
        <% if @freelancer_profile.editable?(current_user) %>
          <button class="fas fa-edit text-primary" type="button"  data-toggle="modal" data-target="#editEducationModal-<%= education.id %>"></button>
        <% end %>
      </div>
      <% if education.description.present? %>
        <ul class="mr-lg-3 mr-1 pl-3">
          <li class="text-wrap text-break"><%= education.description %></li>
        </ul>
      <% end %>
      <%= render 'freelancer/shared/edit_educations', freelancer_profile_education: education %>
    <% end %>
    <div class="mt-3">
      <button class="btn btn-outline-primary" type="button" data-toggle="modal" data-target="#addEducationModal">
        Add an Education
      </button>
      <%= render 'freelancer/shared/add_educations' %>
    </div>
  <% end %>

    <% @freelancer_profile.freelancer_certifications.order(earned: :desc).each do |freelancer_certification| %>
      <div class="d-flex mb-2">
        <div class="mr-2"><b><%= freelancer_certification.description %></b></div>
        <div class="ml-auto mr-1"><i><%= freelancer_certification.earned.strftime("%b %Y") %></i></div>
        <% if @freelancer_profile.editable?(current_user) %>
          <button class="fas fa-edit text-primary" type="button"  data-toggle="modal" data-target="#editLicenseCertificationModal-<%= freelancer_certification.id %>"></button>
        <% end %>
      </div>
      <%= render 'freelancer/shared/edit_certifications', freelancer_certification: freelancer_certification %>
    <% end %>
    <div class="mt-3">
      <button class="btn btn-outline-primary" type="button" data-toggle="modal" data-target="#addLicenseCertificationModal">
        Add Licence or Certification
      </button>
      <%= render 'freelancer/shared/add_certifications' %>
    </div>
</div>
