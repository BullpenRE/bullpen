<% if @job.state == 'posted' %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-header mb-sm-4">
    <div class="container">
      <div class="text-left pt-2 pb-2 ml-md-5">
        <%= image_pack_tag('media/images/bullpen-logo-white.png', size: '95x30') %>
      </div>
      <% unless current_user&.employer? %>
        <div class="d-flex align-items-center text-white">
          <%= link_to "Apply", public_apply_for_job_path(apply_for_job: @job.slug), class: 'btn btn-primary ml-2' %><br /><br />
        </div>
      <% end %>
     </div>
  </nav>
  <div class="container bp-card mb-sm-4">
    <h1><%= @job.title&.capitalize %></h1>
    <%= render partial: 'shared/show_job_post_content', locals: { job: @job } %>
  </div>
<% else %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-header mb-sm-4">
    <div class="container">
      <div class="text-left pt-2 pb-2 ml-md-5">
        <%= image_pack_tag('media/images/bullpen-logo-white.png', size: '95x30') %>
      </div>
    </div>
  </nav>
  <div class="container bp-card mb-sm-4">
    <h1 class="text-center">This job is no longer posted.</h1>
  </div>
<% end %>