<div class="modal" id="deleteContract<%= contract.id %>" tabindex="-1" role="dialog" aria-labelledby="modelLabel" aria-hidden="true">
  <div class="modal-dialog modal-md" role="document">
    <div class="modal-content mt-3">
      <div class="modal-header">
        <h1 class="modal-title" id="deleteContractLabel">Delete Contract</h1>
        <button type="button" class="close close-job" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body pt-0">
        <p>Are you sure you want to delete the <strong><%= contract.title %></strong> contract?</p>
      </div>
      <div class="modal-footer justify-content-between pt-0">
        <button type="button" class="btn btn-link px-0 text-dark" data-dismiss="modal">Cancel</button>
        <div>
          <button class="btn btn-primary delete-contract-<%= contract.id %>" type="button">Delete Contract</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $('.delete-contract-'+<%= contract.id %>).click(() => {
    $.ajax({
      url: '/freelancer/delete_contract',
      data: { id: '<%= contract.id %>' },
      method: 'POST',
      success: () => {
        document.location.reload();
      }
    })
  })
</script>
