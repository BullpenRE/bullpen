          </li>
        <% end %>
        <% if current_user.freelancer_profile.interview_requests.freelancer_visible.any? %>
          <li class="nav-item<%= ' active' if section == 'interviews' %>">
            <%= link_to 'Interviews', freelancer_interviews_path, class: 'nav-link' %>
