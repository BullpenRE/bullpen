<!--Navigation-->
<nav class="navbar navbar-expand-lg navbar-dark bg-header mb-4">
  <div class="container">
    <%= link_to image_pack_tag('media/images/bullpen-logo-white.png', size: '95x30'), root_path, class: 'navbar-brand hello' %>
