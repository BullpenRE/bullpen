<div class="modal" id="declineInterviewRequest<%= interview.id %>" tabindex="-1" role="dialog" aria-labelledby="modelLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content mt-3">
      <div class="modal-header">
        <h1 class="modal-title" id="deleteApplicationDraftLabel">Decline Interview </h1>
        <button type="button" class="close close-job" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body pt-0">
        <p>Are you sure you want to decline interview request from <strong><%= interview.employer_profile.company_name %></strong>?</p>
      </div>
      <div class="modal-footer justify-content-between pt-0">
        <button type="button" class="btn btn-link px-0 text-dark" data-dismiss="modal">Cancel</button>
        <div>
          <button class="btn btn-primary d-block decline-interview<%= interview.id %>" type="button">Decline Interview</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $('.decline-interview<%= interview.id %>').on('click', () => {
    $.ajax({
      url: '/freelancer/decline_interview',
      method: 'POST',
      data: { id: <%= interview.id %> },
      success: () => {
        document.location.reload();
      }
    })
  })
</script>
