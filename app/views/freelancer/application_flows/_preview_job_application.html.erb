<div class="modal" id="previewApplication" tabindex="-1" role="dialog" aria-labelledby="modelLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header pb-0 pt-2">
        <button type="button" class="close close-job" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body pt-0">
        <div class="d-flex justify-content-between flex-column flex-lg-row mb-3">
          <%= render partial: 'shared/about_freelancer', locals: { freelancer_profile: job_application.user.freelancer_profile,
                                                                   job_application: job_application,
                                                                   editable: false } %>
        </div>
        <div class="d-flex d-lg-none mb-4"></div> <!--Shim for mobile views-->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a class="nav-link active font-weight-bold" id="application-tab" data-toggle="tab" href="#application" role="tab" aria-controls="application" aria-selected="true">Application</a>
          </li>
          <li class="nav-item" role="presentation">
            <a class="nav-link font-weight-bold" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Profile</a>
          </li>
        </ul>

        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="application" role="tabpanel" aria-labelledby="application-tab">
            <div class="form-group">
              <div class="d-flex justify-content-between mt-3 font-weight-bold">
                <label for="coverLetter" class="h5">Cover Letter</label>
              </div>
              <p class="text-wrap text-break"><%= job_application.cover_letter %></p>
            </div>
            <% if job_application.work_samples.attached? %>
              <div class="font-weight-bold"><h5>Work Samples</h5></div>
              <% job_application.work_samples.each do |work_sample| %>
                <div class="text-primary mb-3 font-weight-bold">
                  <i class="fas fa-download"></i>
                  <%= link_to work_sample.filename, rails_blob_path(work_sample, disposition: :attachment) %>
                </div>
              <% end %>
            <% end %>
            <hr>
            <% if job_application.available_during_work_hours.present? %>
              <i class="far fa-clock text-secondary"></i> <label class="h5 mb-3">Daytime availability <i class="text-dark font-weight-normal"> (9AM-5PM  <%= job_application.job.time_zone %>) </i></label>
            <% end %>
            <% if job_application.job_application_questions.any? %>
              <p class="h5 mb-2">Questions</p>
              <% job_application.job_application_questions.each do |job_application_question| %>
                <div class="text-dark mb-1 font-weight-bold"><%= job_application_question.job_question.description %></div>
                <div class="text-dark mb-1 font-weight-normal"><%= job_application_question.answer %></div>
              <% end %>
            <% end %>
          </div>
          <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <%= render 'shared/freelancer_profile_tab', freelancer_profile: job_application.user.freelancer_profile %>
          </div>
        </div>
      </div>
      <%= form_for :job_application, url: wizard_path, method: :put, remote: true do |f| %>
        <div class="modal-footer justify-content-between">
          <%= f.hidden_field :job_application_id, value: job_application.id %>
          <%= f.hidden_field 'step', value: 'preview_application' %>

          <%= link_to freelancer_application_flows_path(id: :application_step_1, job_app: job_application), class: "btn btn-outline-primary", remote: true do %>
            Edit Application
          <% end %>
          <div>
            <% if !job_application.applied? %>
              <%= button_tag type: 'submit', value: 'draft', class: "btn btn-outline-primary mr-1" do %>
                Save<span class="d-none d-sm-inline"> as Draft</span>
              <% end %>
            <% end %>
            <%= button_tag type: 'submit', class: "btn btn-primary" do %>
              Submit<span class="d-none d-sm-inline"> Application</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
