<div class="modal fade" id="previewApplicationDropdown-<%= job_application.id %>" tabindex="-1" role="dialog" aria-labelledby="modelLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header pb-0 pt-2">
        <button type="button" class="close close-job" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body pt-0">
        <div class="d-flex justify-content-between flex-column flex-lg-row mb-3">
          <%= render partial: 'shared/about_freelancer', locals: { freelancer_profile: job_application.user.freelancer_profile,
                                                                   job_application: job_application,
                                                                   editable: false } %>
        </div>
        <div class="d-flex d-lg-none mb-4"></div> <!--Shim for mobile views-->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a class="nav-link active font-weight-bold" id="application-tab" data-toggle="tab" href="#application" role="tab" aria-controls="application" aria-selected="true">Application</a>
          </li>
          <li class="nav-item" role="presentation">
            <a class="nav-link font-weight-bold" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Profile</a>
          </li>
          <% if job_application.user.freelancer_profile.reviews.present? %>
            <li class="nav-item" role="presentation">
              <a class="font-weight-bold nav-link" id="review-tab" data-toggle="tab" href="#review" role="tab" aria-controls="review" aria-selected="false">
                <%= "Review".pluralize(job_application.user.freelancer_profile.reviews.size) %> <span class="text-secondary">(<%= job_application.user.freelancer_profile.reviews.size %>)</span>
              </a>
            </li>
          <% end %>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="application" role="tabpanel" aria-labelledby="application-tab">
            <%= render partial: 'shared/freelancer_application', locals: { job_application: job_application } %>
          </div>
          <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <%= render 'shared/freelancer_profile_tab', freelancer_profile: job_application.user.freelancer_profile %>
          </div>
          <% if job_application.user.freelancer_profile.reviews.present? %>
            <div class="tab-pane fade show" id="review" role="tabpanel" aria-labelledby="review-tab">
              <%= render partial: 'shared/freelancer_profile_review', locals: { freelancer_profile: job_application.user.freelancer_profile } %>
            </div>
          <% end %>
        </div>
      </div>
      <% if editable %>
        <%= form_for :job_application, url: freelancer_application_flows_path, method: :put, remote: true do |f| %>
          <div class="modal-footer justify-content-between">
            <%= f.hidden_field :job_application_id, value: job_application.id %>
            <%= f.hidden_field 'step', value: 'preview_application' %>

            <%= link_to freelancer_application_flows_path(id: :application_step_1, job_app: job_application), class: "btn btn-outline-primary editApplication", remote: true do %>
              Edit Application
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<script>
  $('.editApplication').on('click', () => {
    $('#previewApplicationDropdown-<%= job_application.id %>').modal('hide');
  })
</script>
