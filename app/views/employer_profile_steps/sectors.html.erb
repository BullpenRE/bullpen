<%= render 'logo' %>

<!--Progress Meter, Step 4-->
<div class="container mb-4">
  <div class="progress bg-white shadow-sm mx-auto" style="max-width: 500px;">
    <div class="progress-bar" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <div class="text-secondary font-weight-bold my-1 text-center">Step 4 of 5</div>
</div>

<!--Content Card, Step 4-->
<div class="container">
  <div class="bp-card mb-5 mx-auto" style="max-width: 500px;">
    <%= form_for @employer_profile, url: wizard_path, method: :put do |f| %>
    <div class="mb-4">
      <h2>What sectors do you work in?</h2>
    </div>



      <div class="row mb-5">
        <div class="col-md">
        <%= f.collection_check_boxes(:employer_profile_sectors,
                                     Sector.all[0..3], :id, :sector_description) do |b| %>
          <div class="custom-control custom-checkbox mb-3">
            <%=  b.label(:calss => "custom-control-label") do %>
              <%= b.check_box(:calss => "custom-control-input") + b.text %>
            <% end %>
          </div>
        <% end %>
        </div>
          <div class="col-md">
        <%= f.collection_check_boxes(:employer_profile_sectors,
                                     Sector.all[4..7], :id, :sector_description) do |b| %>
          <div class="custom-control custom-checkbox mb-3">
            <%=  b.label(:calss => "custom-control-label") do %>
              <%= b.check_box(:calss => "custom-control-input") + b.text %>
            <% end %>
          </div>
        <% end %>
          </div>
    </div>
    <div class="d-flex justify-content-between">
      <%= link_to 'Back', previous_wizard_path, class: "btn btn-link px-0" %>
      <%= f.submit 'Next', class: 'btn btn-primary' %>
    </div>
      <% end %>
  </div>
</div>
