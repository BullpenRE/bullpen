<%= render 'logo' %>

<!--Progress Meter, Step 4-->
<div class="container mb-4">
  <div class="progress bg-white shadow-sm mx-auto" style="max-width: 500px;">
    <div class="progress-bar" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <div class="text-secondary font-weight-bold my-1 text-center">Step 4 of 5</div>
</div>

<!--Content Card, Step 4-->
<div class="container">
  <div class="bp-card mb-5 mx-auto" style="max-width: 500px;">
    <%= form_for @employer_profile, url: wizard_path, method: :put do |f| %>
    <div class="mb-4">
      <h2>What sectors do you work in?</h2>
    </div>


    <div class="row mb-5">
      <div class="col-md">
        <div class="custom-control custom-checkbox mb-3">
          <input type="checkbox" class="custom-control-input" id="sector1">
          <label class="custom-control-label" for="sector1">Office</label>
        </div>
        <div class="custom-control custom-checkbox mb-3">
          <input type="checkbox" class="custom-control-input" id="sector2">
          <label class="custom-control-label" for="sector2">Industrial</label>
        </div>
        <div class="custom-control custom-checkbox mb-3">
          <input type="checkbox" class="custom-control-input" id="sector3">
          <label class="custom-control-label" for="sector3">Retail</label>
        </div>
        <div class="custom-control custom-checkbox mb-3">
          <input type="checkbox" class="custom-control-input" id="sector4">
          <label class="custom-control-label" for="sector4">Student Housing</label>
        </div>
      </div>
      <div class="col-md">
        <div class="custom-control custom-checkbox mb-3">
          <input type="checkbox" class="custom-control-input" id="sector5">
          <label class="custom-control-label" for="sector5">Multifamily</label>
        </div>
        <div class="custom-control custom-checkbox mb-3">
          <input type="checkbox" class="custom-control-input" id="sector6">
          <label class="custom-control-label" for="sector6">Medical</label>
        </div>
        <div class="custom-control custom-checkbox mb-3">
          <input type="checkbox" class="custom-control-input" id="sector7">
          <label class="custom-control-label" for="sector7">LIHTC</label>
        </div>
        <div class="custom-control custom-checkbox mb-3">
          <input type="checkbox" class="custom-control-input" id="sector8">
          <label class="custom-control-label" for="sector8">HTC</label>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-between">
      <%= link_to 'Back', previous_wizard_path, class: "btn btn-link px-0" %>
      <%= f.submit 'Next', class: 'btn btn-primary' %>
    </div>
      <% end %>
  </div>
</div>
