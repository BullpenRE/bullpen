<%= render '/freelancer_profile_steps/nav_bar' %>

<!--Progress Meter, Step 2-->
<div class="container mb-4">
  <div class="progress bg-white shadow-sm mx-auto" style="max-width: 500px;">
    <div class="progress-bar" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <div class="text-secondary font-weight-bold my-1 text-center">Step 2 of 5</div>
</div>

<!--Content Card, Step 2-->
<div class="container">
  <div class="bp-card mb-5 mx-auto" style="max-width: 500px;">
    <%= form_for @employer_profile, url: wizard_path, method: :put do |f| %>
    <div class="mb-4">
      <h2>How many people work at your company?</h2>
    </div>

      <% EmployerProfile.available_employee_counts.each do |employee_count| %>
        <div class="custom-control custom-radio mb-3">
          <%= f.radio_button :employee_count, employee_count[1],
                             :class => "custom-control-input",
                             :id => "employeeCount#{employee_count[1]}",
                             :value => "#{employee_count[1]}" %>
          <%= f.label employee_count[0], :class => "custom-control-label",
                                             :for => "employeeCount#{employee_count[1]}" %>
        </div>
      <% end %>

    <div class="d-flex justify-content-between">
      <%= link_to 'Back', previous_wizard_path, class: "btn btn-link px-0" %>
      <%= f.submit 'Next', class: 'btn btn-primary' %>
    </div>
      <% end %>
  </div>
</div>
