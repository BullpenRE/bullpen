<%= render '/nav_bar/signup_nav_bar' %>

<!--Progress Meter, Step 5-->
<div class="container mb-4">
  <%= render partial: 'shared/notice_and_alert' %>
  <div class="progress bg-white shadow-sm mx-auto" style="max-width: 500px;">
    <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  <div class="text-secondary font-weight-bold my-1 text-center">Step 5 of 5</div>
</div>

<!--Content Card, Step 5-->
<div class="container">
  <div class="bp-card mb-5 mx-auto" style="max-width: 500px;">
    <%= form_for @employer_profile, url: wizard_path, method: :put do |f| %>
    <div class="mb-4">
      <h2>What brings you here?</h2>
    </div>

    <div class="custom-control custom-checkbox mb-3">
      <%= f.check_box :motivation_one_time,
                    :id => "purpose1",
                    :class => "custom-control-input" %>
      <label class="custom-control-label" for="purpose1">I have a one-time project</label>
    </div>
    <div class="custom-control custom-checkbox mb-3">
      <%= f.check_box :motivation_ongoing_support,
                    id: "purpose2",
                    :class => "custom-control-input" %>
      <label class="custom-control-label" for="purpose2">I need on-going support</label>
    </div>
    <div class="custom-control custom-checkbox mb-3">
      <%= f.check_box :motivation_backfill,
                    id: "purpose3",
                    :class => "custom-control-input" %>
      <label class="custom-control-label" for="purpose3">I need to backfill an employee who left</label>
    </div>
    <div class="custom-control custom-checkbox mb-3">
      <%= f.check_box :motivation_augment,
                    id: "purpose4",
                    :class => "custom-control-input" %>
      <label class="custom-control-label" for="purpose4">I need to augment my current team</label>
    </div>
    <div class="custom-control custom-checkbox mb-5">
      <%= f.check_box :motivation_other,
                    id: "purpose5",
                    :class => "custom-control-input" %>
      <label class="custom-control-label" for="purpose5">Other</label>
    </div>

    <div class="d-flex justify-content-between">
      <%= link_to 'Back', previous_wizard_path, class: "btn btn-link px-0" %>
      <%= f.submit 'Next', class: 'btn btn-primary' %>
    </div>

      <% end %>
  </div>
</div>
